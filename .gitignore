# WordPress Plugin .gitignore

# WordPress core files (if accidentally included)
/wordpress/
/wp-admin/
/wp-includes/
wp-*.php
xmlrpc.php
.htaccess

# WordPress configuration
wp-config.php
wp-config-local.php
wp-config-production.php
wp-config-staging.php

# Database dumps
*.sql
*.sql.gz
*.sql.zip

# Log files
*.log
error_log
debug.log

# Cache files
/cache/
/wp-content/cache/
/wp-content/advanced-cache.php
/wp-content/wp-cache-config.php

# Backup files
*.bak
*.backup
*.old
*.orig
*.save
*.swp
*.tmp
*~

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# IDE and editor files
.vscode/
.idea/
*.sublime-project
*.sublime-workspace
*.komodoproject
.komodotools/
.brackets.json
*.tmproj
*.tmproject
tmtags

# Node.js dependencies (if using build tools)
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
package-lock.json
yarn.lock

# Build artifacts
/build/
/dist/
/assets/build/
*.min.js
*.min.css

# Composer dependencies
/vendor/
composer.lock

# Environment files
.env
.env.local
.env.production
.env.staging
.env.development

# Plugin specific
*.zip
/releases/

# WordPress uploads (usually not in plugin directory)
/uploads/
/wp-content/uploads/

# Plugin development
/tests/
/phpunit.xml
/.phpunit.result.cache
/coverage/

# Version control
.git/
.gitattributes
.gitmodules

# Documentation builds
/docs/_build/
/site/

# Temporary files
/tmp/
/temp/